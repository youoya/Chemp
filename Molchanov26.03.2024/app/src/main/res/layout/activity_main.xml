<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d77a7"
    tools:context=".Creating_an_account.MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="320dp"
        android:layout_height="650dp"
        app:cardCornerRadius="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextVhod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:gravity="center"
                android:text="Вход и регистрация"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/VvediteEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="95dp"
                android:hint="Введите Email"
                android:textSize="20sp"
                android:inputType="textNoSuggestions"
                android:lines="2" />
            <Button
                android:id="@+id/next1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="goActivity2"
                android:backgroundTint="#1d77a7"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="200dp"
                android:text="Далее" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>