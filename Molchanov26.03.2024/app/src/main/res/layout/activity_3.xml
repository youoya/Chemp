<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bd4b4b"
    tools:context=".Creating_an_account.Activity3">


    <androidx.cardview.widget.CardView
        android:id="@+id/CardView3"
        android:layout_width="320dp"
        android:layout_height="650dp"
        app:cardCornerRadius="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SozdaniePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:gravity="center"
                android:text="Создание пароля"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/PridumaitePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="Придумайте пароль"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/VveditePassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:hint="Введите надежный пароль"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/PovtoritePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:gravity="center"
                android:text="Повторите пароль"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/VveditePassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:hint="Повторите пароль"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:text="Применить"
                android:onClick="passwordCreate"
                android:backgroundTint="#cae630"
                android:layout_marginVertical="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginVertical="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="0dp"
                    android:backgroundTint="#1d77a7"
                    android:onClick="goBack2"
                    android:text="Отмена" />

                <Button
                    android:id="@+id/SkipPasswordCreate"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="0dp"
                    android:backgroundTint="#bd4b4b"
                    android:onClick="skipPasswordCreate"
                    android:text="Пропустить" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>