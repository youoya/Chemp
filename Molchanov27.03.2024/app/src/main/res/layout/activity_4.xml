<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cae630"
    tools:context=".User_information.Activity4">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView3"
        android:layout_width="320dp"
        android:layout_height="650dp"
        app:cardCornerRadius="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SozdaniePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:gravity="center"
                android:text="Создание карты"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/PridumaitePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="Заполните информацию"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/VvediteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:hint="Имя"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/VvediteSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:hint="Фамилия"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/VvediteOtchestvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:hint="Отчество"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/VvediteDateRozd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:hint="ДД.ММ.ГГ"
                android:inputType="textNoSuggestions"
                android:lines="2"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SkipCardCreate"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="140dp"
                    android:onClick="SkipCardCreate"
                    android:backgroundTint="#239a05"
                    android:text="Пропустить"/>

                <Button
                    android:id="@+id/SaveCard"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="140dp"
                    android:backgroundTint="#239a05"
                    android:onClick="SaveCard"
                    android:text="Сохранить"/>



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>