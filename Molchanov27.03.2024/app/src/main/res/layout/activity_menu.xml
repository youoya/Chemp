<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808089"
    tools:context=".MenuActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="26dp"
        android:text="Меню"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:text="Перейти на:"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="100dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="127dp"
        android:backgroundTint="#4f7a76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goMain"
        android:text="Главная"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:text="Каталог"
        android:backgroundTint="#9CA54A"
        android:textSize="20dp"
        android:onClick="goKatelog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="195dp"
        android:text="Корзина"
        android:textSize="20dp"
        android:backgroundTint="#4371D3"
        android:onClick="goShop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="16dp"
        android:text="Акции и новости"
        android:textSize="15dp"
        android:backgroundTint="#18D1C2"
        android:onClick="goAkcii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="195dp"
        android:text="Карта"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="goCardChange"
        android:backgroundTint="#4f9fe0"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:text="Настройки"
        android:textSize="20dp"
        android:onClick="goSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

</androidx.constraintlayout.widget.ConstraintLayout>