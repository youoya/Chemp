                android:onClick="goAkcii"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Новость дня!"
                android:background="#8ae7e0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Свайп в низ."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Новость недели!"
                android:background="#8ae7e0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Свайп в низ."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="В соответствии с заданием 5.5"
                android:background="#8ae7e0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Блок акции и новости исчез"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        android:text="Меню"
        android:textColor="#039BE5"
        android:textSize="20dp"
        android:onClick="goMenu1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
